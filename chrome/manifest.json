{
    "manifest_version": 2,
    "background": {
        "page": "background.html"
    },
    "options_page": "common/options.html",
    "name": "BugSnap (Gitlab improved)",
    "description": "Shoot your bug and send photo to your tracker.",
    "version": "0.4.2",
    "icons": {
        "16": "common/img/16.png",
        "32": "common/img/32.png",
        "48": "common/img/48.png",
        "128": "common/img/128.png"
    },
    "browser_action": {
        "default_icon": "common/img/32.png"
    },
    "optional_permissions": [ "clipboardRead" ],
    "permissions": ["tabs", "http://*/*", "https://*/*", "activeTab", "notifications"],
    "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'",
    "commands": {
        "_execute_browser_action": {
            "suggested_key": {
                "default": "Shift+Alt+Q"
            }
        }
    }
}
